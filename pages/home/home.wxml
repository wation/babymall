<!--pages/home/home.wxml-->
<view class='container'>
    <view class='card-title'>
        <image class='img' src='{{tempImage}}'></image>
    </view>
    <view class='wait'>
        <button type="primary" class='pass'  bindtap='switchTab'>
            <text class='t4'>{{waitTime}}秒</text>
            跳过
        </button>
    </view>
    <view class='v0'>
        <view class='v v1'>
            <text class="desc title">{{srcUser}}寄语：</text>
        </view>
        <view class='v v2'>
            <text class="desc content">{{content}}</text>
        </view>
    </view>
    <view class='v v3'>
        <text class="thanks">感谢您为好友</text>
        <text class='t1'>{{srcUser}}</text>
        <text>减价</text>
        <text class='t2'>{{money}}</text>
        <text>元！</text>
    </view>
</view>